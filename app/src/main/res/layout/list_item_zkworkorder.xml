<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    android:background="@drawable/shape_corner_workorder_item"
    android:foreground="?android:selectableItemBackground"
    android:orientation="horizontal"
    card_view:cardCornerRadius="2dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true">

        <RelativeLayout
            android:id="@+id/relativeLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="5dp"
            android:padding="5dp">

            <TextView
                android:id="@+id/workorder_sb_title"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:text="@string/assetnum_text"
                android:textColor="@color/black"
                android:textSize="@dimen/dimens_16sp" />

            <TextView
                android:id="@+id/assetnum_text_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_toRightOf="@+id/workorder_sb_title"
                android:hint="@string/hint_item_num_title"
                android:textColor="@color/black"
                android:textSize="@dimen/dimens_16sp" />


            <TextView
                android:id="@+id/item_desc_title"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/workorder_sb_title"
                android:layout_marginTop="5dp"
                android:text="@string/desc_text"
                android:textColor="@color/black"
                android:textSize="@dimen/dimens_16sp" />

            <TextView
                android:id="@+id/item_desc_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/assetnum_text_id"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"
                android:layout_toRightOf="@+id/item_desc_title"
                android:ellipsize="end"
                android:ems="14"
                android:hint="@string/hint_item_desc_title"
                android:singleLine="true"
                android:textColor="@color/black"
                android:textSize="@dimen/dimens_16sp" />

            <View
                android:id="@+id/view_1_id"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_below="@+id/item_desc_title"
                android:layout_marginTop="5dp"
                android:background="@color/light_gray" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/view_1_id"
                android:layout_marginTop="5dp"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingBottom="@dimen/dimen_5"
                    android:paddingTop="@dimen/dimen_5">

                    <TextView
                        android:id="@+id/status_text_id"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="状态:等待批准"
                        android:textColor="@color/black"
                        android:textSize="@dimen/dimens_16sp" />

                    <TextView
                        android:id="@+id/reportdate_text_id"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:layout_weight="1"
                        android:text="报告日期:17-5-25 14:39:56"
                        android:textColor="@color/black"
                        android:textSize="@dimen/dimens_16sp" />


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingBottom="@dimen/dimen_5"
                    android:paddingTop="@dimen/dimen_5">

                    <TextView
                        android:id="@+id/reportedbyid_text_id"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="申请人:MAXADMIN"
                        android:textColor="@color/black"
                        android:textSize="@dimen/dimens_16sp" />

                    <TextView
                        android:id="@+id/crewid_text_id"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:layout_weight="1"
                        android:text="班组:ZK"
                        android:textColor="@color/black"
                        android:textSize="@dimen/dimens_16sp" />


                </LinearLayout>
            </LinearLayout>
        </RelativeLayout>
    </RelativeLayout>

</android.support.v7.widget.CardView>