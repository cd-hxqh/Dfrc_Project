<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <include layout="@layout/title_main"></include>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_10">

        <TextView
            android:id="@+id/kccx_text_id"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawablePadding="@dimen/dimen_5"
            android:drawableTop="@mipmap/ic_ddjgd"
            android:gravity="center"
            android:text="@string/kccx_text" />

        <TextView
            android:id="@+id/kcpd_text_id"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawablePadding="@dimen/dimen_5"
            android:drawableTop="@mipmap/ic_wtdj"
            android:gravity="center"
            android:text="@string/kcpd_text" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_20">

        <TextView
            android:id="@+id/jsrk_text_id"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawablePadding="@dimen/dimen_5"
            android:drawableTop="@mipmap/ic_ddjgd"
            android:gravity="center"
            android:text="@string/jsrk_text" />

        <TextView
            android:id="@+id/wzff_text_id"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawablePadding="@dimen/dimen_5"
            android:drawableTop="@mipmap/ic_wtdj"
            android:gravity="center"
            android:text="@string/wzff_text" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_20">

        <TextView
            android:id="@+id/tk_text_id"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawablePadding="@dimen/dimen_5"
            android:drawableTop="@mipmap/ic_ddjgd"
            android:gravity="center"
            android:text="@string/tk_text" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawablePadding="@dimen/dimen_5"
            android:drawableTop="@mipmap/ic_wtdj"
            android:gravity="center"
            android:text="@string/wzff_text"
            android:visibility="invisible" />

    </LinearLayout>

</LinearLayout>